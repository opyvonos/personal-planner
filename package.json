{
  "name": "personal-planner",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "main.js",
  "scripts": {
    "dev": "vite",
    "preview": "vite preview",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "build": "vite build && electron-builder"
  },
  "dependencies": {
    "@fullcalendar/common": "^5.11.5",
    "@fullcalendar/core": "^6.1.17",
    "@fullcalendar/daygrid": "^6.1.17",
    "@fullcalendar/interaction": "^6.1.17",
    "@fullcalendar/rrule": "^6.1.17",
    "@fullcalendar/timegrid": "^6.1.17",
    "@fullcalendar/vue3": "^6.1.17",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.4.9",
    "rrule": "^2.8.1",
    "vue": "^3.5.13",
    "vue-router": "^4.5.1"
  },
  "devDependencies": {
    "@vitejs/plugin-vue": "^5.2.1",
    "electron": "^36.4.0",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.personalplanner.id",
    "productName": "Personal Planner",
    "icon": "public/icon.ico",
    "directories": {
      "buildResources": "public",
      "output": "dist"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "src/server.js",
        "to": "src/server.js"
      }
    ],
    "win": {
      "icon": "public/icon.ico",
      "target": "nsis"
    }
  }
}
